<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="MedLi Settings">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="vibrate_preference"
            android:summary="If checked device will vibrate twice when a medication is due."
            android:title="Vibrate alert?" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="sound_preference"
            android:summary="If checked device will alert with a sound, some tablets will default to sound if vibrate not available."
            android:title="Sound alert?" />

        <EditTextPreference
            android:defaultValue="0"
            android:dialogTitle="Enter how many minutes before medication is due."
            android:inputType="number"
            android:key="early_alarm_preference"
            android:summary="Enter how many minutes before a medication is due that you would like the alarm to go off."
            android:title="Early warning alarm?" />

        <Preference
            android:key="log_out"
            android:title="Sign Out" />

    </PreferenceCategory>

